@model IPTSE_portal.Models.login_table

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="color:black;text-align:center">Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="align-content:center">

    <hr />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-7">
            <h4 style="color: #ff0000;" align="Center">@ViewBag.ErrorMessage</h4>
            <h4 style="color: #00ff21;" align="Center">@TempData["Message"]</h4>
        </div>
    </div>
    <br /><br /><br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @*@Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-offset-4 col-md-10">
            @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", placeholder = "User Id" } })
            @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        @*@Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-offset-4 col-md-10">
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4 col-md-10">
            <a href="~/IPTSERegistration/ForgetPassword">Forget Password</a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <a href="~/IPTSERegistration/Registration">Not Yet Registered?</a>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-6 col-md-10">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </div>
    <br /><br /><br /><br /><br /><br /><br /><br /><br />
</div>
}