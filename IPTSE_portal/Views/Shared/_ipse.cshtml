<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap Core CSS -->

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- MetisMenu CSS -->
    <link href="~/Content/metisMenu.min.css" rel="stylesheet">

    <!-- Timeline CSS -->
    <link href="~/Content/timeline.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/startmin.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="~/Content/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <script>
        function openInNewTab(url) {
            var win = window.open(url, '_blank');
            win.focus();
        }
    </script>
</head>
<body style="background-color:lightsteelblue">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
            <img src="~/Content/themes/base/images/logo.png" height="50" width="50" />
        </div>
        <div class="navbar-header">
            <a class="navbar-brand" href="~/Dashboard/Index">Intellectual Property Talent Search Examination</a>
        </div>

        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>



        <ul class="nav navbar-right navbar-top-links">


            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i> user <b class="caret"></b>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a href="~/Dashboard/UserProfile"><i class="fa fa-user fa-fw"></i> User Profile</a>
                    </li>
                    <li>
                        <a href="~/Dashboard/Setting"><i class="fa fa-gear fa-fw"></i> Settings</a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="~/Dashboard/logout"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                    </li>

                </ul>
            </li>
        </ul>
        <!-- /.navbar-top-links -->

        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="sidebar-search">
                        <h4 style="margin-top:10px">
                            <i class="fa fa-bars" aria-hidden="true"></i>
                            Menu
                        </h4>
                        <!-- /input-group -->
                    </li>
                    <li>
                        <a href="~/Dashboard/Index" class="active"><i class="fa fa-table fa-fw"></i> Dashboard</a>
                    </li>

                    @if (Session["Type"] != null && Session["Type"].ToString() == "Institution")
                    {

                        <li>
                            <a href="~/SchoolRegistration/BulkReg"><i class="fa fa-file-export fa-fw"></i> Upload Student Details</a>
                        </li>
                        <li>
                            <a href="~/Dashboard/SchoolPaymentdetails"><i class="fa fa-money fa-fw"></i> Payment for uploaded students</a>
                        </li>
                        <li>
                            <a href="~/Dashboard/Setting"><i class="fa fa-edit fa-fw"></i> Registration & Payment Report</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="~/Dashboard/content"><i class="fa fa-table fa-fw"></i> Course Content</a>
                        </li>
                        <li>
                            <a href="~/Dashboard/result"><i class="fa fa-edit fa-fw"></i>Result</a>
                        </li>

                        <li>
                            <a href="~/Dashboard/payment"><i class="fa fa-money fa-fw"></i> Pay Online</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>

    <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="container">
            <div class="navbar-right navbar-brand">
                <a href="http://www.martancy.com/" target="_blank">Site Powered by Martancy </a>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Scripts/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/Scripts/startmin.js"></script>
</body>

</html>
