<script type="text/javascript">
    $("#vtext").hide();
    $(document).ready(function () {
        $('.datefield').datepicker({
            dateFormat: "mm/dd/yy",
            changeMonth: true,
            changeYear: true,
            minDate: new Date(01,01,1990),
            maxDate: new Date(),
            showOn: "both",
            buttonImage: '/Content/themes/base/images/cal.png',
            buttonImageOnly: true,
            yearRange: '1990:2018'
        });
    });


    function ShowHideTextBox(ddlObject) {
        var selectedValue = ddlObject.value;
        if (selectedValue.toUpperCase() == "OTHERS" || selectedValue.toUpperCase() == "VOLUNTEER") {
            $("#vtext").show();
            $("#vname").hide();
            document.getElementById("vtext").value = "";
            //document.getElementById("vtext").value = ddlObject.options[ddlObject.selectedIndex].innerHTML;
        }
        else {
            $("#vtext").hide();
            document.getElementById("vtext").value = ddlObject.options[ddlObject.selectedIndex].innerHTML;
        }
    }
</script>