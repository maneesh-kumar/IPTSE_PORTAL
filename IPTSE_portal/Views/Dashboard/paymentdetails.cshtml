
@{
    ViewBag.Title = "paymentdetails";
    Layout = "~/Views/Shared/_ipse.cshtml";
}
@using (Html.BeginForm())
{
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="col-lg-12">
                <div class="row">
                    <ol class="breadcrumb" style="margin-top: 26px;">
                        <li>
                            <a href="index">
                                <em class="fa fa-home"></em>
                            </a>
                        </li>
                        <li class="active">Payment Details</li>
                    </ol>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        

                        <h4>@ViewBag.msg</h4>
                        <table width="100%">
                            <tr><th>User Id</th><th>Payment Id</th><th>Payment Date</th></tr>
                            <tr>
                                <td><p> @ViewBag.id</p></td>
                                <td>
                                    <p>
                                        @ViewBag.paymentid
                                    </p>
                                </td>
                                <td><p>@ViewBag.datetime</p></td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
}